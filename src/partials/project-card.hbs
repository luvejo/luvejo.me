<article class='project-card-container'>
  <p class='date-range-mobile'>
    {{firstCommit.month}}
    {{#if (not-equal firstCommit.year lastCommit.year)}}
      <span>{{firstCommit.year}}</span>
    {{/if}}

    -

    {{lastCommit.month}},
    <span>{{lastCommit.year}}</span>
  </p>

  <p class='date-range-desktop'>
    {{lastCommit.month}},
    <span>{{lastCommit.year}}</span>
    <br />
    {{firstCommit.month}},
    <span>{{firstCommit.year}}</span>
  </p>

  <div class='content project-card'>
    <p class='project-title'>
      {{title}}

      {{#if links.demo}}
        <a href='{{links.demo}}' target='_blank'>
          <i class='fas fa-external-link-alt'></i>
        </a>
      {{/if}}

      {{#if links.github}}
        <a href='{{links.github}}' target='_blank'>
          <i class='fab fa-github'></i>
        </a>
      {{/if}}
    </p>

    <p class='description'>{{{description}}}</p>

    <div class='skillset'>
      <div class='skill-list'>
        {{#each stack}}
          <div class='skill'>{{this}}</div>
        {{/each}}
      </div>
    </div>
  </div>
</article>
